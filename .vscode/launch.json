{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS Tests File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": ["-r", "espower-typescript/guess", "${relativeFile}"],
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_PATH": "${cwd}/src/main:${cwd}/src/environments/local"
      },
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
